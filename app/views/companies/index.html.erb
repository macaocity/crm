<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<table>
  <thead>
    <tr align="left">
      <th width="200px"><%= t('Company Name') %></th>
      <th width="120px"><%= t('Phone') %></th>
      <th width="220px"><%= t('Address') %></th>
      <th width="120px"><%= t('Country') %></th>
      <th width="120px"><%= t('City') %></th>
      <th width="100px"><%= t('Title') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.comp_name %></td>
        <td><%= company.comp_tel %></td>
        <td><%= company.comp_addr %></td>
        <td><%= company.comp_country %></td>
        <td><%= company.comp_city %></td>
        <td><%= company.title %></td>
        <td width="50px"><%= link_to t('Edit'), edit_contact_company_path(@contact,company) %></td>
        <td width="50px"><%= link_to t('Destroy'), [@contact,company], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

